  <image filename="min-focused-hover.png" x="0" y="0" width="27" height="14"/>
</draw_ops>

<draw_ops name="button-minimize-unfocused">
  <image filename="min-focused-normal.png" x="0" y="0" width="27" height="14"/>
</draw_ops>

<draw_ops name="button-minimize-blurred">
  <image filename="min-blurred-normal.png" x="0" y="0" width="27" height="14"/>
