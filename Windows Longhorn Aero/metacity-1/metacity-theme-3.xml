<draw_ops name="button-close-pressed">
  <image filename="close-pressed.png" x="0" y="0" width="width" height="14"/>
</draw_ops>

<draw_ops name="button-maximize-focused">
  <image filename="max-focused-hover.png" x="0" y="0" width="width" height="14"/>
</draw_ops>

<draw_ops name="button-maximize-unfocused">
  <image filename="max-focused-normal.png" x="0" y="0" width="width" height="14"/>
</draw_ops>

<draw_ops name="button-maximize-blurred">
  <image filename="max-blurred-normal.png" x="0" y="0" width="width" height="14"/>
